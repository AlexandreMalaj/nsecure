{
  "name": "nsecure",
  "version": "0.3.0",
  "description": "Node.js security CLI",
  "main": "./index.js",
  "bin": {
    "node-secure": "./bin/index.js",
    "nsecure": "./bin/index.js"
  },
  "scripts": {
    "eslint": "eslint bin src test",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "pkg-ok",
    "test": "npm run test-only && npm run eslint",
    "test-only": "jest --coverage"
  },
  "files": [
    "bin",
    "public",
    "src",
    "views",
    "index.js",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ES-Community/node-secure.git"
  },
  "keywords": [],
  "author": "ES Community",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ES-Community/node-secure/issues"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/fixtures/"
    ]
  },
  "homepage": "https://github.com/ES-Community/node-secure#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@slimio/eslint-config": "^4.0.0",
    "@types/node": "^13.1.4",
    "eslint": "^6.8.0",
    "get-folder-size": "^2.0.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "pkg-ok": "^2.3.1"
  },
  "dependencies": {
    "@polka/send-type": "^0.5.2",
    "@slimio/async-cli-spinner": "^0.5.1",
    "@slimio/github": "^0.5.0",
    "@slimio/is": "^1.5.1",
    "@slimio/lock": "^0.3.0",
    "@slimio/npm-registry": "^0.5.0",
    "combine-async-iterators": "^1.1.2",
    "dotenv": "^8.2.0",
    "estree-walker": "^1.0.0",
    "filenamify": "^4.1.0",
    "get-port": "^5.1.0",
    "httpie": "^1.1.2",
    "is-minified-code": "^2.0.0",
    "itertools": "^1.6.0",
    "kleur": "^3.0.3",
    "lodash.clonedeep": "^4.5.0",
    "make-promises-safe": "^5.1.0",
    "meriyah": "^1.9.3",
    "ms": "^2.1.2",
    "ntlp": "^1.1.2",
    "open": "^7.0.0",
    "pacote": "^10.2.0",
    "polka": "^0.5.2",
    "sade": "^1.7.0",
    "semver": "^7.1.1",
    "sirv": "^0.4.2",
    "unique-slug": "^2.0.2"
  }
}
